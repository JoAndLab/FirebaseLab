<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:paddingEnd="16dp"
    android:paddingStart="72dp">

    <android.support.v7.widget.CardView
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="40dp"
        app:cardBackgroundColor="@color/default_bubble_color_send"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/message_text_view_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:textColor="@color/default_message_color_send"
                android:textSize="@dimen/default_message_text_size"
                tools:text="My name is Timi and I am not a god." />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userPhotoProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/google_login"
        app:civ_border_color="#cccccc"
        app:civ_border_width="1dp"
        tools:src="@drawable/google_login" />

    <TextView
        android:id="@+id/timestamp_text_view_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="50dp"
        android:gravity="center_vertical|start"
        android:textColor="@color/default_tstamp_color_send"
        android:textSize="@dimen/default_timestamp_text_size"
        tools:text="12:10" />

</FrameLayout>